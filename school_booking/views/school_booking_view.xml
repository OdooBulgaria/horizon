<openerp>
  <data>
    <!-- Top menu item -->
    <menuitem name="Booking" id="menu_main_booking" icon="fa-calendar" web_icon="hr_timesheet_sheet,static/description/icon.png" sequence="90" />

    <menuitem name="Bookings" parent="menu_main_booking" id="menu_bookings" sequence="50" />

    <menuitem name="Assets" parent="menu_main_booking" id="menu_assets" sequence="100" />
    
    <!-- Building Tree View -->
    <record id="view_building_tree" model="ir.ui.view">
      <field name="name">school.building.tree</field>
      <field name="model">school.building</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Buildings">
          <field name="name" />
          <field name="location" />
        </tree>
      </field>
    </record>
    
    <!-- Building Form View -->
    <record model="ir.ui.view" id="building_form">
      <field name="name">school.building.view</field>
      <field name="model">school.building</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Building">
          <sheet>
            <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
            <div class="oe_title">
                <h1>
                    <field name="name" default_focus="1" placeholder="Name"/>
                </h1>
                <h3 class="oe_fade">
                    <field name="location" placeholder="Location"/>
                </h3>
            </div>
            <group col="4">
              <field name="monday"/>
              <field name="monday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('monday','=',False)]}"/>
              <field name="monday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('monday','=',False)]}"/>
              <field name="tuesday"/>
              <field name="tuesday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('tuesday','=',False)]}"/>
              <field name="tuesday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('tuesday','=',False)]}"/>
              <field name="wednesday"/>
              <field name="wednesday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('wednesday','=',False)]}"/>
              <field name="wednesday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('wednesday','=',False)]}"/>
              <field name="thursday"/>
              <field name="thursday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('thursday','=',False)]}"/>
              <field name="thursday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('thursday','=',False)]}"/>
              <field name="friday"/>
              <field name="friday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('friday','=',False)]}"/>
              <field name="friday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('friday','=',False)]}"/>
              <field name="saturday"/>
              <field name="saturday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('saturday','=',False)]}"/>
              <field name="saturday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('saturday','=',False)]}"/>
              <field name="sunday"/>
              <field name="sunday_from" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('sunday','=',False)]}"/>
              <field name="sunday_to" widget="timepicker" nolabel="1"  options="{'step': '30', 'disableTextInput': false}" attrs="{'invisible': [('sunday','=',False)]}"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_building_filter" model="ir.ui.view">
      <field name="name">building.select</field>
      <field name="model">school.building</field>
      <field name="arch" type="xml">
        <search string="Search Building">
          <field name="name" filter_domain="[('name','ilike',self)]" />
          <group expand="1" string="Group By">
            <filter string="Resource Type" context="{'group_by':['resource_type']}" />
          </group>
        </search>
      </field>
    </record>

    <record id="action_building_tree" model="ir.actions.act_window">
      <field name="name">Buildings</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.building</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="view_building_filter" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a building.
        </p>
        <p>
          Horizon helps you easily track your buildings.
        </p>
      </field>
    </record>

    <record id="action_building_tree_tree_view1" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_building_tree" />
      <field name="act_window_id" ref="action_building_tree" />
    </record>
    <record id="action_building_tree_form_view2" model="ir.actions.act_window.view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="building_form" />
      <field name="act_window_id" ref="action_building_tree" />
    </record>

    <menuitem id="menu_building_tree" parent="menu_assets" action="action_building_tree" sequence="99" />
    
    <!-- Asset Tree View -->
    <record id="view_asset_tree" model="ir.ui.view">
      <field name="name">school.asset.tree</field>
      <field name="model">school.asset</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Assets" editable="bottom">
          <field name="sequence"/>
          <field name="name"/>
          <field name="building_id"/>
          <field name="asset_type_id"/>
          <field name="responsible_id"/>
          <field name="room_id"/>
        </tree>
      </field>
    </record>
    
    <!-- Asset Form View -->
    <record model="ir.ui.view" id="asset_form">
      <field name="name">school.asset.view</field>
      <field name="model">school.asset</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Asset">
          <sheet>
            <div class="oe_button_box" name="button_box">
                <button name="toggle_active" type="object" groups="base.group_no_one" class="oe_stat_button" icon="fa-archive">
                    <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                </button>
            </div>
            <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
            <div class="oe_title">
                <h1>
                    <field name="name" default_focus="1" placeholder="Name"/>
                </h1>
            </div>
            <group col="2">
              <field name="asset_type_id"/>
              <field name="is_room" invisible="1"/>
              <field name="building_id" attrs="{'invisible': [('is_room','=',False)]}"/>
              <field name="tag_ids" widget="many2many_tags"/>
            </group>
            <group col="4">
              <field name="sequence"/>
              <field name="require_validation"/>
              <field name="responsible_id" attrs="{'invisible': [('require_validation','=',False)]}"/>
              <field name="linked_to_room"/>
              <field name="room_id" attrs="{'invisible': [('linked_to_room','=',False)]}"/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

    <record id="view_asset_filter" model="ir.ui.view">
      <field name="name">asset.select</field>
      <field name="model">school.asset</field>
      <field name="arch" type="xml">
        <search string="Search Asset">
          <field name="name" filter_domain="[('name','ilike',self)]" />
          <group expand="1" string="Group By">
            <filter string="Resource Type" context="{'group_by':['resource_type']}" />
          </group>
        </search>
      </field>
    </record>

    <record id="action_asset_tree" model="ir.actions.act_window">
      <field name="name">Assets</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.asset</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="view_asset_filter" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a asset.
        </p>
        <p>
          Horizon helps you easily track your assets.
        </p>
      </field>
    </record>

    <record id="action_asset_tree_tree_view1" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_asset_tree" />
      <field name="act_window_id" ref="action_asset_tree" />
    </record>
    <record id="action_asset_tree_form_view2" model="ir.actions.act_window.view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="asset_form" />
      <field name="act_window_id" ref="action_asset_tree" />
    </record>

    <menuitem id="menu_asset_tree" parent="menu_assets" action="action_asset_tree" sequence="49" />
    
    <!-- Asset_type Tree View -->
    <record id="view_asset_type_tree" model="ir.ui.view">
      <field name="name">school.asset_type.tree</field>
      <field name="model">school.asset_type</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Asset_types">
          <field name="name"/>
          <field name="is_room"/>
          <field name="has_responsible"/>
          <field name="linked_to_room"/>
        </tree>
      </field>
    </record>
    
    <!-- Asset Type Form View -->
    <record model="ir.ui.view" id="asset_type_form">
      <field name="name">school.asset_type.view</field>
      <field name="model">school.asset_type</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Asset Type">
          <sheet>
            <div class="oe_title">
                <h1>
                    <field name="name" default_focus="1" placeholder="Name"/>
                </h1>
            </div>
            <group col="2">
              <field name="is_room"/>
              <field name="has_responsible"/>
              <field name="linked_to_room"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_asset_type_filter" model="ir.ui.view">
      <field name="name">asset_type.select</field>
      <field name="model">school.asset_type</field>
      <field name="arch" type="xml">
        <search string="Search Asset Type">
          <field name="name" filter_domain="[('name','ilike',self)]" />
        </search>
      </field>
    </record>

    <record id="action_asset_type_tree" model="ir.actions.act_window">
      <field name="name">Asset Type</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.asset_type</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="view_asset_type_filter" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a asset_type.
        </p>
        <p>
          Horizon helps you easily track your asset_types.
        </p>
      </field>
    </record>

    <record id="action_asset_type_tree_tree_view1" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_asset_type_tree" />
      <field name="act_window_id" ref="action_asset_type_tree" />
    </record>
    <record id="action_asset_type_tree_form_view2" model="ir.actions.act_window.view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="asset_type_form" />
      <field name="act_window_id" ref="action_asset_type_tree" />
    </record>

    <menuitem id="menu_asset_type_tree" parent="menu_assets" action="action_asset_type_tree" sequence="79" />
    
    <!-- Booking Tree View -->
    <record id="view_booking_tree" model="ir.ui.view">
      <field name="name">school.booking.tree</field>
      <field name="model">school.booking</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Bookings">
          <field name="state" invisible="1" />
          <field name="name" />
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="booking_form">
      <field name="name">school.booking.view</field>
      <field name="model">school.booking</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form" />
        <field eval="25" name="priority" />
        <field name="arch" type="xml">
            <xpath expr="//h2" position="after">
              <field name="asset_id"/>
            </xpath>
        </field>
    </record>
    
    <record id="booking_calendar_view" model="ir.ui.view">
        <field name="name">school.booking.calendar.view</field>
        <field name="model">school.booking</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Bookings" date_start="start_datetime" color="asset_id" date_delay="duration" scheduler_group="asset_id">
                <field name="partner_id"/>
                <field name="asset_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_booking_filter" model="ir.ui.view">
      <field name="name">booking.select</field>
      <field name="model">school.booking</field>
      <field name="arch" type="xml">
        <search string="Search Booking">
          <field name="name" filter_domain="[('name','ilike',self)]" />
          <filter string="Reccuring" name="recurring" domain="[('recurrency','=',True)]" />
          <group expand="1" string="Group By">
            <filter string="Resource Type" context="{'group_by':['resource_type']}" />
          </group>
        </search>
      </field>
    </record>

    <record id="action_booking_tree" model="ir.actions.act_window">
      <field name="name">All Bookings</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.booking</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,calendar</field>
      <field name="search_view_id" ref="view_booking_filter" />
      <field name="context">{"search_default_recurring":0}</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a booking.
        </p>
        <p>
          Horizon helps you easily track your bookings.
        </p>
      </field>
    </record>

    <record id="action_booking_rec_tree" model="ir.actions.act_window">
      <field name="name">Reccuring Bookings</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.booking</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,calendar</field>
      <field name="search_view_id" ref="view_booking_filter" />
      <field name="context">{"search_default_recurring":1}</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a recurring booking.
        </p>
        <p>
          Horizon helps you easily track your reccuring bookings.
        </p>
      </field>
    </record>

    <record id="action_booking_tree_tree_view1" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_booking_tree" />
      <field name="act_window_id" ref="action_booking_tree" />
    </record>
    <record id="action_booking_tree_form_view2" model="ir.actions.act_window.view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="booking_form" />
      <field name="act_window_id" ref="action_booking_tree" />
    </record>

    <menuitem id="menu_booking_tree" parent="menu_bookings" action="action_booking_tree" sequence="49" />
    
    <menuitem id="menu_booking_rec_tree" parent="menu_bookings" action="action_booking_rec_tree" sequence="99" />
    
    <!--
    
      Interface for booking
    
    -->

    <template id="assets_backend" name="school_booking_assets" inherit_id="web_scheduler.assets_backend">
      <xpath expr="." position="inside">
          <link rel="stylesheet" href="/school_booking/static/src/css/school_booking.css" />
          <script type="text/javascript" src="/school_booking/static/src/js/school_booking.js"></script>
      </xpath>
    </template>
        
    <record id="action_school_booking" model="ir.actions.client">
        <field name="name">Booking</field>
        <field name="tag">school_booking.main</field>
        <field name="res_model">school.booking</field>
    </record>

    <menuitem id="school_booking.menu_school_booking" parent="menu_main_booking" name="Interface" action="action_school_booking" icon="fa-envelope" web_icon="school_booking,static/description/icon.png" sequence="999"/>
    
  </data>
</openerp>