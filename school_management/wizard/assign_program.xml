<odoo>
    <record id="assing_program_view" model="ir.ui.view">
        <field name="name">Assing Program</field>
        <field name="model">school.assign.program</field>
        <field name="arch" type="xml">
            <form string="Generation Options">
                <separator string="Assing Program"/>
                <label string="This wizard will assing a program to a student and create an individual bloc."/>
                <group col="4">
                    <field name="year_id" create="false" delete='false'/>
                    <field name="student_id" create="false" delete='false'/>
                    <field name="source_bloc_id" create="false" delete='false'/>
                </group>
                <footer>
                    <button name="assign_program" string="Assing Program" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assing_program_view" model="ir.actions.act_window">
        <field name="name">Assing Program</field>
        <field name="res_model">school.assign.program</field>
        <field name="src_model">res.partner</field>
        <field name="multi">True</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="assing_program_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
    
</odoo>