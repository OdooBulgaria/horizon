    <menuitem name="Assignments" parent="menu_main_program" id="menu_assignment" sequence="10" />

    <!--
    
        Course
        
        -->
        
    <!-- Course Kanban View -->
    <record model="ir.ui.view" id="course_kanban_view">
      <field name="name">school.course.kanban</field>
      <field name="model">school.course</field>
      <field name="arch" type="xml">
        <kanban class="o_program_kanban">
          <field name="code" />
          <field name="name" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_program_kanban">
                <div class="o_kanban_card_header">
                  <div class="o_kanban_card_header_title">
                    <div class="o_primary">
                      <strong><field name="code" /> - <field name="name" /></strong>
                    </div>
                  </div>
                  <div class="container o_kanban_card_content o_visible">
                    <div class="row">
                      <div class="col-xs-4 o_kanban_primary_left">
                        <b>Credits : </b>
                        <field name="credits" />
                      </div>
                      <div class="col-xs-4 o_kanban_primary_right">
                        <b>Hours : </b>
                        <field name="hours" />
                      </div>
                      <div class="col-xs-4 o_kanban_primary_right">
                        <b>Weight : </b>
                        <field name="weight" />
                      </div>
                    </div>
                  </div>
                  <!--<div class="o_kanban_manage_button_section">
                    <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                  </div>-->
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Course Tree View -->
    <record id="view_course_tree" model="ir.ui.view">
      <field name="name">school.course.tree</field>
      <field name="model">school.course</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Contacts">
          <field name="code" />
          <field name="name" />
          <field name="hours" />
          <field name="credits" />
          <field name="weight" />
        </tree>
      </field>
    </record>

    <!-- Course Form View -->
    <record model="ir.ui.view" id="course_form">
      <field name="name">school.course.view</field>
      <field name="model">school.course</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Course">
          <!--<header>
    		            <button name="transfert_confirm" states="draft" string="Validate" class="oe_highlight" groups="account.group_account_invoice"/>
    		            <button name="transfert_cancel" states="draft,confirmed" string="Cancel Transfert" groups="account.group_account_invoice"/>
    		            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
    		        </header>-->
          <sheet>
            <group col="4">
              <field name="code" colspan="4" />
              <field name="name" colspan="4" />
              <group col="6" colspan="4">
                <field name="hours" />
                <field name="credits" />
                <field name="weight" />
              </group>
            </group>
            <notebook>
              <page string="Description">
                <field name="description" placeholder="Vade mecum..." colspan="4" />
              </page>
              <page string="Course Groups">
                <field name="course_group_ids" mode="kanban" readonly="1">
                  <kanban>
                    <field name="code" />
                    <field name="name" />
                    <templates>
                      <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_program_kanban">
                          <div class="oe_kanban_details">
                            <strong class="oe_program_heading"><field name="code"/></strong>
                            <field name="name" />
                          </div>
                        </div>
                      </t>
                    </templates>
                  </kanban>
                </field>
              </page>
              <page string="Notes">
                <field name="notes" />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

    <record id="view_course_filter" model="ir.ui.view">
      <field name="name">course.select</field>
      <field name="model">school.course</field>
      <field name="arch" type="xml">
        <search string="Search Course">
          <field name="name" filter_domain="['|',('name','ilike',self),('code','=',self)]" />
        </search>
      </field>
    </record>

    <record id="action_course_form" model="ir.actions.act_window">
      <field name="name">Course</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.course</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_course_filter" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a course.
        </p>
        <p>
          Odoo helps you easily track all activities related to a course.
        </p>
      </field>
    </record>

    <record id="action_course_form_view1" model="ir.actions.act_window.view">
