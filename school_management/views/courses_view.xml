            id="menu_main_program"
            icon="fa-book"
            web_icon="school,static/description/icon.png"
            sequence="60"/>
		
		<menuitem name="Program" parent="menu_main_program" id="menu_program" sequence="1"/>

    <record id="view_course_filter" model="ir.ui.view">
        <field name="name">course.select</field>
        <field name="model">school.course</field>
        <field name="arch" type="xml">
            <search string="Search Course">
               <field name="name"
                   filter_domain="['|',('name','ilike',self),('code','=',self)]"/>
           </search>
        </field>
    </record>
		
		<record id="action_course_form" model="ir.actions.act_window">
      <field name="name">Course</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.course</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_course_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a course.
        </p><p>
          Odoo helps you easily track all activities related to
          a course.
        </p>
      </field>
    </record>
	
