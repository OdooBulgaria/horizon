            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page name="assignment_list" string="Current Assignments" attrs="{'invisible': [('teacher','=',False)]}">
                        <field name="teacher_current_assigment_ids">
                            <tree string="Current Assignments">
                                <field name="bloc_id" />
                                <field name="course_id" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
	
		<record id="action_teacher_form_view1" model="ir.actions.act_window.view">
