<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="website_booking.browser">
        <div class="layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
            <header class="header mdl-layout__header">
                <div class="mdl-layout__header-row">
                    <span class="mdl-layout-title"><img src="/website_booking/static/src/img/logo.png"/></span>
                    <div class="mdl-layout-spacer"></div>
                    <span class="mdl-layout-title">Horizon Booking</span>
                    <div class="mdl-layout-spacer"></div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable">
                        <label class="mdl-button mdl-js-button mdl-button--icon" for="search">
                            <i class="material-icons">search</i>
                        </label>
                        <div class="mdl-textfield__expandable-holder">
                            <input class="mdl-textfield__input" type="text" id="search" />
                            <label class="mdl-textfield__label" for="search">Enter your query...</label>
                        </div>
                    </div>
                    <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="hdrbtn">
                        <i class="material-icons">more_vert</i>
                    </button>
                    <ul class="mdl-menu mdl-js-menu mdl-js-ripple-effect mdl-menu--bottom-right" for="hdrbtn">
                        <li class="mdl-menu__item">About</li>
                        <li class="mdl-menu__item">Contact</li>
                        <li class="mdl-menu__item">Legal information</li>
                    </ul>
                </div>
            </header>
            <main class="mdl-layout__content">
                <div class="navbar"/>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--1-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
                    <div class="mdl-color--white mdl-shadow--4dp content mdl-cell mdl-cell--10-col">
                        <div class='calendar'/>
                    </div>
                </div>
                <button id="add-booking-button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--accent mdl-color-text--accent-contrast"><i class="material-icons">add</i></button>
            </main>
        </div>
    </t>
    
    <t t-name="website_booking.browser_calendar">
        <div id='fc_calendar'/>
    </t>
    
    <t t-name="website_booking.browser_navigation">
        <table>
            <tr class="categories"/>
        </table>
    </t>
    
    <t t-name="website_booking.browser_navigation_card">
        <td>
            <t t-if="!widget.to_parent">
            <div class="navbar-card mdl-card mdl-shadow--2dp  mdl-js-ripple-effect" t-attf-style="background: url('/booking/categories/image/#{widget.category.id}')  center / cover;" t-att-data-category-id="widget.category.id" >
                <div class="mdl-card__title mdl-card--expand">
                    <span class="mdl-ripple"></span>
                </div>
                <div class="navbar-card__actions mdl-card__actions">
                    <span t-esc="widget.category.display_name"/>
                </div>
            </div>
            </t>
            <t t-if="widget.to_parent">
            <div class="navbar-card mdl-card mdl-shadow--2dp mdl-js-ripple-effect" t-attf-style="background: url('/website_booking/static/src/img/up.png')  center / cover;" t-att-data-category-id="widget.category.id">
                <div class="mdl-card__title mdl-card--expand">
                    <span class="mdl-ripple"></span>
                </div>
                <div class="navbar-card__actions mdl-card__actions">
                    Previous
                </div>
            </div>
            </t>
        </td>
    </t>
    
</templates>
