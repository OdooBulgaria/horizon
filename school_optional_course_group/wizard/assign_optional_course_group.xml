<odoo>
    <record id="assign_optional_course_group_view" model="ir.ui.view">
        <field name="name">Assing Optional Course</field>
        <field name="model">school.assign.optional.course_group</field>
        <field name="arch" type="xml">
            <form string="Generation Options">
                <separator string="Assing Optional Course"/>
                <label string="This wizard will assign the optional course of a student."/>
                <field name="optional_course_lines">
                  <tree string="Courses" editable="top" create="0" delete="0">
                    <field name="year_id" readonly="1"/>
                    <field name="student_id"  readonly="1"/>
                    <field name="bloc_name" readonly="1" />
                    <field name="course_group_source_id" readonly="1" />
                    <field name="course_group_target_id" />
                  </tree>
                </field>
                <footer>
                    <button name="assign_options" string="Assing Options" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!--  Add wizard -->
    <act_window name="Assing Optional Course"
                res_model="school.assign.optional.course_group"
                src_model="school.individual_bloc"
                view_mode="form"
                multi="True"
                target="new"
                key2="client_action_multi"
                id="action_assign_optional_course_group_view"
                context="{'default_bloc_ids': '${object.id or \'\'}'}"/>
</odoo>