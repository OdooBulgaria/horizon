<openerp>
    <data>
        <!-- Add program for student form view -->
        <record id="view_student_form_school_docs" model="ir.ui.view">
            <field name="name">view.res.partner.form.school.docs</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="school_management.view_student_form_school" />
            <field eval="25" name="priority" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Add documents" type="action" name="%(action_document_add_wizard)d" class="oe_highlight" context="{'default_student_id': active_id}" />
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page name="official_document_list" string="Official Documents" attrs="{'invisible': [('student','=',False)]}">
                        <field name="official_document_ids">
                            <tree string="Programs">
                                <field name="name" />
                                <field name="is_available" />
                                <field name="attachment_ids" widget="many2many_binary" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>