<openerp>
    <data>
        <!-- Split Course Group Wizard View -->
        <record model="ir.ui.view" id="course_group_form">
          <field name="name">school.split_ue_wizard.view</field>
          <field name="model">school.split_ue_wizard</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
            <form string="Split Course Group Wizard">
              <sheet>
                <field name="source_course_group_id"/>
                <field name="target_first_course_group_id" invisible="1"/>
                <field name="target_second_course_group_id" invisible="1"/>
                <group col="2" attrs="{'invisible': [('source_course_group_id','=',False)]}">
                    <field name="target_first_course_ids" context="{'default_course_group_id':target_first_course_group_id.id}">
                      <tree string="Courses">
                        <field name="name" />
                        <field name="hours" />
                        <field name="credits" />
                        <field name="weight" />
                      </tree>
                    </field>
                    <field name="target_second_course_group_id" context="{'default_course_group_id':target_second_course_group_id.id}">
                      <tree string="Courses">
                        <field name="name" />
                        <field name="hours" />
                        <field name="credits" />
                        <field name="weight" />
                      </tree>
                    </field>
                </group>
                <footer>
                    <button name="on_confirm" string="Confirm" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button name="on_cancel" string="Cancel" type="object" class="oe_link"/>
                </footer>
            </form>
          </field>
        </record>
    </data>
</openerp>
