<templates>
    <t t-name="MainView">
        <div class="o_school_evaluations">
            <div id="sidebar" class="sidebar" />
            <div id="page-wrapper" style="min-height: 1033px;">
                <div class="o_evaluation_bloc_container" />
            </div>
        </div>
    </t>

    <t t-name="DetailResultDialog">
        <t t-set="cg" t-value="widget.course_group" />
        <div class="container" style="font-size:150%;">
            <div class="row">
                <div class="col-md-12">
                    <h2 class=""><t t-esc="cg.name" /></h2>
                </div>
            </div>
            <t t-foreach="cg.courses" t-as="course">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class=""><t t-esc="course.name" /></h3>
                    </div>
                </div>
                <t t-if="!course.dispense">
                    <div class="row" t-if="course.type == 'C'">
                        <div class="col-md-4 col-md-offset-1">
                            Cote d'année :
                        </div>
                        <div class="col-md-2">
                            <t t-esc="course.ann_result" />
                        </div>
                    </div>
                    <div class="row" t-if="(course.type == 'C' or course.type == 'T') and course.jan_result">
                        <div class="col-md-4 col-md-offset-1">
                            Résultat de Janvier :
                        </div>
                        <div class="col-md-2">
                            <t t-esc="course.jan_result" />
                        </div>
                    </div>
                    <div class="row" t-if="course.type == 'C' or course.type == 'T' or course.type == 'S'">
                        <div class="col-md-4 col-md-offset-1">
                            Résultat de Juin :
                        </div>
                        <div class="col-md-2">
                            <t t-esc="course.jun_result" />
                        </div>
                    </div>
                    <div class="row" t-if="course.type == 'D'">
                        <div class="col-md-4 col-md-offset-1">
                            Résultat reporté :
                        </div>
                        <div class="col-md-2">
                            <t t-esc="course.jun_result" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-1">
                            <h4 class="">Evaluation Première Session :</h4>
                        </div>
                        <div class="col-md-2">
                            <h4 class=""><t t-esc="course.first_session_result" /></h4>
                        </div>
                    </div>
                </t>
                <t t-if="course.dispense">
                    <div class="row" t-if="course.dispense">
                        <div class="col-md-4 col-md-offset-1">
                            Dispensé
                        </div>
                    </div>
                </t>
            </t>
            <div class="row">
                <div class="col-md-12">
                    <h3 class="">Evaluation Première Session</h3>
                </div>
            </div>
            <div class="row" t-if="!cg.first_session_deliberated_result_bool">
                <div class="col-md-12">
                    <h4 class="">(<t t-foreach="cg.courses" t-as="course"><t t-if="!course_first"> + </t><t t-esc="course.first_session_result" /> * <t t-esc="course.weight" /></t>) / <t t-esc="cg.total_weight" /> = <t t-esc="cg.final_result" /></h4>
                </div>
            </div>
            <div class="row" t-if="cg.first_session_deliberated_result_bool">
                <div class="col-md-12">
                    <h4 class="">Résultat délibéré : <t t-esc="cg.final_result" /></h4>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ConfigDialog">
        <div>
            <h2>This is the config dialog</h2>
        </div>
    </t>

    <t t-name="SideBar">
        <a class="oe_logo" href="#">
            <img src='/web/binary/company_logo' />
        </a>
        <div class="navbar-default main_navbar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <div class="text-center eval_top_buttons">
                            <div class="btn-group" data-toggle="buttons">
                                <label t-att-class="'btn btn-primary center-block o_school_theatre ' + (school_domain == 2 ? 'active' : '')">
                                    <input type="radio">THEATRE</input>
                                </label>
                                <label t-att-class="'btn btn-primary center-block o_school_musique ' + (school_domain == 1 ? 'active' : '')">
                                    <input type="radio">MUSIQUE</input>
                                </label>
                            </div>
                        </div>
                    </li>
                    <t t-foreach="groups" t-as="group">
                        <li>
                            <a t-att-data-group-id="group.id" href="#" class="o_school_group_item">
                                <i class="fa fa-users fa-fw"></i>
                                <t t-esc="group.title" /><span class="fa"></span><span class="badge pull-right"><t t-esc="group.blocs.length"/></span>
                            </a>
                        </li>
                    </t>
                    <li class="sidebar-search">
                        <div class="input-group custom-search-form">
                            <span class="input-group-btn">
                                <button class="btn btn-default evaluation_config" type="button">
                                    <i class="fa fa-gear fa-fw"></i>
                                </button>
                            </span>
                            <input type="text" class="form-control" placeholder="Search..." />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                        <!-- /input-group -->
                    </li>
                </ul>
            </div>
            <div id="sub_sidebar" class="sub_sidebar" />
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-exit-menu">
                    <li>
                        <a href="/web/">
                            <i class="fa fa-sign-out"></i>
                        </a>
                    </li>
                </ul>
        </div>
    </t>

    <t t-name="SubSideBar">
        <div class="navbar-default sub_navbar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-submenu">
                    <t t-set="is_first" t-value="true" />
                    <t t-foreach="blocs" t-as="bloc">
                        <li>
                            <a t-att-class="'o_school_bloc_item'+ (bloc_first ? ' active':'')" t-att-data-bloc-id="bloc.id" href="#">
                                <i class="fa fa-user fa-fw"></i>
                                <span><t t-esc="bloc.student_id[1]" /></span><span t-att-class="((bloc.state == 'postponed') or (bloc.state == 'awarded') or (bloc.state == 'failed') ? 'fa pull-right fa-check' : '')"></span>
                            </a>
                        </li>
                        <t t-set="is_first" t-value="false" />
                    </t>
                </ul>
            </div>
        </div>
    </t>

    <t t-name="BlocEditor">
        <div>
            <div class="bloc_form container highlight" t-if="widget.bloc">
                <div class="row">
                    <span class="oe_form_field oe_form_field_image oe_avatar" data-original-title="" title="">
                        <img border="1" name="image" t-att-src="widget.student_image" class="img-rounded" style="max-width: 100px; max-height: 100px;"/>
                    </span>
                    <span class="col-md-10">
                        <h2><t t-esc="widget.bloc.student_name"/> - <t t-esc="widget.bloc.source_bloc_title"/></h2>
                    </span>
                </div>
                <div class="row vertical-align" style="margin-bottom: 10px;">
                    <div class="col-md-1 text-center credits">
                        crédits <br/><span class="score_value"><t t-esc="widget.bloc.totat_acquiered_credits"/></span>
                    </div>
                    
                    <t t-if="widget.bloc.source_bloc_level == 3">
                    <t t-if="widget.bloc_result.grade">
                    <div class="col-md-1 text-center moyenne" t-if="widget.bloc.source_bloc_level == 3">
                        moyenne <br/><span class="score_value">19,0</span>
                    </div>    
                    <div class="col-md-8">
                        <div t-att-class="'alert alert-' + widget.bloc_result.class" role="alert"><t t-esc="widget.bloc_result.message"/><b><t t-esc="widget.bloc_result.grade"/></b></div>
                    </div>
                    <div class="col-md-2">
                        <button t-if="widget.bloc.state == 'progress'" type="button" t-att-class="'btn btn-lg btn-' + widget.bloc_result.class + ' bloc_' + widget.bloc_result.next_action"><t t-esc="widget.bloc_result.button_text"/></button>
                        <button t-if="widget.bloc.state != 'progress'" type="button" t-att-class="'btn btn-lg disabled btn-' +widget.bloc_result.class"><t t-esc="widget.bloc_result.button_text"/></button>
                    </div>    
                    </t>
                    <t t-if="!widget.bloc_result.grade">
                    <div class="col-md-9">
                        <div t-att-class="'alert alert-' + widget.bloc_result.class" role="alert"><t t-esc="widget.bloc_result.message"/></div>
                    </div>
                    <div class="col-md-2">
                        <button t-if="widget.bloc.state == 'progress'" type="button" t-att-class="'btn btn-lg btn-' + widget.bloc_result.class + ' bloc_' + widget.bloc_result.next_action"><t t-esc="widget.bloc_result.button_text"/></button>
                        <button t-if="widget.bloc.state != 'progress'" type="button" t-att-class="'btn btn-lg disabled btn-' +widget.bloc_result.class"><t t-esc="widget.bloc_result.button_text"/></button>
                    </div>    
                    </t>
                    </t>
                    
                    <t t-if="widget.bloc.source_bloc_level != 3">
                    <div class="col-md-9">
                        <div t-att-class="'alert alert-' + widget.bloc_result.class" role="alert"><t t-esc="widget.bloc_result.message"/></div>
                    </div>
                    <div class="col-md-2">
                        <button t-if="widget.bloc.state == 'progress'" type="button" t-att-class="'btn btn-lg btn-' + widget.bloc_result.class + ' bloc_' + widget.bloc_result.next_action"><t t-esc="widget.bloc_result.button_text"/></button>
                        <button t-if="widget.bloc.state != 'progress'" type="button" t-att-class="'btn btn-lg disabled btn-' +widget.bloc_result.class"><t t-esc="widget.bloc_result.button_text"/></button>
                    </div>    
                    </t>
                </div>
                
                <div class="row">
                    <!-- Table -->
                    <table class="table table-condensed table-bordered" style="font-size:180%;">
                        <colgroup>
                            <col style="width:20px"/>
                            <col style="width:500"/>
                            <col style="width:50px"/>
                            <col style="width:50px"/>
                            <col style="width:75px"/>
                            <col style="width:20px"/>
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>Intitulé</th>
                                <th>Rés</th>
                                <th>Cre</th>
                                <th>Acq</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="counter" t-value="1" />
                            <t t-foreach="widget.course_groups" t-as="course_group">
                                <tr class="course_group">
                                    <th scope="row" class="text-center">
                                        <t t-esc="counter" />
                                    </th>
                                    <td>
                                        <t t-esc="course_group.title" />
                                    </td>
                                    <td>
                                        <t t-esc="course_group.final_result" />
                                    </td>
                                    <td>
                                        <t t-esc="course_group.total_credits" />
                                    </td>
                                    <td>
                                        <span class="label label-success" t-if="course_group.acquiered === 'A'">Acq</span>
                                        <span class="label label-warning" t-if="course_group.acquiered === 'NA'">NoAcq</span>
                                    </td>
                                    <td>
                                        <i class="fa fa-search o_school_edit_icg" role="button" aria-hidden="true" t-att-data-cg-id="course_group.id"></i>
                                    </td>
                                </tr>
                                <t t-set="counter" t-value="counter + 1" />
                                <t t-foreach="course_group.courses" t-if="course_group.acquiered === 'NA'" t-as="course">
                                    <tr style="font-style: italic;font-size:80%;">
                                        <th scope="row" class="text-center"></th>
                                        <td>
                                            <t t-esc="course.title" /><i t-if="course.teacher_id" class="oe_fade"> - <t t-esc="course.teacher_id[1]"/></i></td>
                                        <td>
                                            <t t-esc="course.first_session_result" />
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>

</templates>