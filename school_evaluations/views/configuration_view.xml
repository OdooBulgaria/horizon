<openerp>
    <data>
        <menuitem name="Evaluations" parent="school_management.menu_school_admin" id="menu_admin_evals" sequence="20" />
        
        <!-- Session List View -->
        <record id="view_session_list" model="ir.ui.view">
            <field name="name">school.session.tree</field>
            <field name="model">school.session</field>
            <field eval="8" name="priority" />
            <field name="arch" type="xml">
                <tree string="Sessions" editable="bottom">
                    <field name="year_id" />
                    <field name="type" />
                </tree>
            </field>
        </record>
        
        <record id="action_session_list" model="ir.actions.act_window">
            <field name="name">Sessions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>
        
        <record id="action_session_tree_view1" model="ir.actions.act_window.view">
            <field name="sequence" eval="1" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_session_list" />
            <field name="act_window_id" ref="action_session_list" />
        </record>
        
        <menuitem id="menu_session_list" parent="menu_admin_evals" action="action_session_list" sequence="20" />
        
    </data>
</openerp>