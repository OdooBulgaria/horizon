<odoo>
    <record id="register_next_view" model="ir.ui.view">
        <field name="name">Register Next Wizard</field>
        <field name="model">school.register_next_wizard</field>
        <field name="arch" type="xml">
            <form string="Register Next Wizard">
                <div class="oe_title">
                    <h2>
                        <field name="new_bloc_id" class="oe_inline"/> - <field name="new_bloc_name" class="oe_inline"/>
                    </h2>
                </div>
                <field name="state" />          
                <field name="init_bloc_id"/>
                <group states="awarded,failed" col="1">
                    <field name="course_group_ids">
                        <tree string="Course Groups" editable="false">
                            <field name="name" />
                            <field name="total_hours" />
                            <field name="total_credits" />
                        </tree>
                    </field>
                    <field name="anticipated_course_group_ids">
                        <tree string="Anticipated Course Groups">
                            <field name="name" />
                            <field name="total_hours" />
                            <field name="total_credits" />
                        </tree>
                    </field>
                </group>
                <footer states="awarded,failed,rework,anticipate">
                    <button name="next_state" string="Next" type="object" default_focus="1" class="oe_highlight" /> or
                    <button name="oncancel" string="Cancel" class="oe_link" />
                </footer>
                <footer states="confirm">
                    <button name="apply_changes" string="Apply" type="object" default_focus="1" class="oe_highlight" /> or
                    <button name="oncancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_register_next_view" model="ir.actions.act_window">
        <field name="name">Register Next</field>
        <field name="res_model">school.register_next_wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="register_next_view" />
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>