<openerp>
    <data>

        <!-- Add invoice to Individual Program form view -->
        <record id="individual_bloc_invoice_form" model="ir.ui.view">
            <field name="name">school.individual_bloc.invoice.view</field>
            <field name="model">school.individual_bloc</field>
            <field name="inherit_id" ref="school_evaluations.individual_bloc_eval_form" />
            <field eval="25" name="priority" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='set_to_progress']" position="replace">
                    <button name="set_to_progress" type="object" states="invoiced" string="Progress" class="oe_highlight" />
                    <button name="action_invoice_create" type="object" states="draft" string="Invoice" class="oe_highlight" />
                </xpath>
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,invoiced,progress,awarded,abandonned" />
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>